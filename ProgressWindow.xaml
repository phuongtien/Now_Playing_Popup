<Window x:Class="NowPlayingPopup.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đang tải cập nhật..."
        Width="400"
        Height="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Border Background="#FF2A1E1C"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#FF404040"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="3" 
                            BlurRadius="15" 
                            Opacity="0.5"/>
        </Border.Effect>
        
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Đang tải cập nhật..."
                      FontSize="16"
                      FontWeight="SemiBold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,15"/>
            
            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                        Height="20"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        Background="#FF1A1A1A"
                        Foreground="#FF1DB954"
                        BorderThickness="0"/>
            
            <!-- Percent Text -->
            <TextBlock x:Name="PercentText"
                      Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}"
                      FontSize="12"
                      Foreground="#FFAAAAAA"
                      HorizontalAlignment="Center"
                      Margin="0,8,0,0"/>
        </StackPanel>
    </Border>
</Window>